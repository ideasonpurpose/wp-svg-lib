{
  "name": "wp-svg-lib",
  "version": "0.4.0",
  "private": true,
  "description": "Utilities for collecting and reusing inline SVG components",
  "license": "MIT",
  "author": "Joe Maller <joe@ideasonpurpose.com>",
  "main": "composer.json",
  "scripts": {
    "prettier": "prettier --write",
    "version": "version-everything && auto-changelog && git add -u"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.php",
        "options": {
          "phpVersion": "7.2",
          "printWidth": 120,
          "singleQuote": true,
          "tabWidth": 4,
          "trailingCommaPHP": true
        }
      }
    ]
  },
  "dependencies": {
    "@prettier/plugin-php": "^0.14.0",
    "auto-changelog": "^2.0.0",
    "prettier": "^2.0.5",
    "version-everything": "^0.6.3"
  },
  "auto-changelog": {
    "package": true
  },
  "version-everything": {
    "files": [
      "README.md",
      "composer.json"
    ]
  }
}
