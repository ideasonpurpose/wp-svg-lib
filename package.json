{
  "name": "wp-svg-lib",
  "version": "1.2.0",
  "private": true,
  "description": "Utilities for collecting and reusing inline SVG components",
  "license": "MIT",
  "author": "Joe Maller <joe@ideasonpurpose.com>",
  "main": "composer.json",
  "scripts": {
    "composer": "npm run composer:install",
    "composer:install": "docker compose run --rm composer",
    "composer:update": "docker compose run --rm composer update",
    "test": "docker compose run --rm test",
    "posttest": "replace-in-file '/<file name=\"\\/app\\//g' '<file name=\"./' coverage.xml --quiet --isRegex",
    "test:watch": "chokidar '{src,tests}/**/*.php' -c 'npm run test' -t 3000",
    "version": "version-everything && auto-changelog && git add -u"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "embeddedLanguageFormatting": "off"
        }
      },
      {
        "files": "*.php",
        "options": {
          "printWidth": 100,
          "singleQuote": true,
          "tabWidth": 4,
          "trailingCommaPHP": true
        }
      }
    ]
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.17.6",
    "auto-changelog": "^2.3.0",
    "chokidar-cli": "^3.0.0",
    "prettier": "^2.5.1",
    "replace-in-file": "^6.3.2",
    "version-everything": "^0.6.4"
  },
  "auto-changelog": {
    "package": true,
    "backfillLimit": 7
  },
  "version-everything": {
    "files": [
      "README.md"
    ]
  }
}
